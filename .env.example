# Nitor Monorepo Environment Variables
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nitor
DB_USER=nitor
DB_PASSWORD=change_this_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# MINIO (S3-COMPATIBLE STORAGE)
# ===========================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_this_secret
MINIO_BUCKET_NAME=nitor-files

# ===========================================
# JWT SECURITY
# ===========================================
# Generate a secure random string (min 256 bits for HS256)
JWT_SECRET=your-super-secret-jwt-key-min-256-bits-required

# ===========================================
# AI SERVICE (GOOGLE GEMINI)
# ===========================================
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here
API_KEY=your-gemini-api-key-here
AI_SERVICE_URL=http://localhost:3001

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8080
VITE_AI_SERVICE_URL=http://localhost:3001

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ===========================================
# SPRING PROFILE
# ===========================================
SPRING_PROFILE=dev

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=8080
