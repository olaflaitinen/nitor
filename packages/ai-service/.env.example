# ===========================================
# NITOR AI SERVICE - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# GOOGLE GEMINI API CONFIGURATION
# ===========================================

# Get your FREE Gemini API Key: https://makersuite.google.com/app/apikey
#
# Step-by-step instructions:
# 1. Go to https://makersuite.google.com/app/apikey
# 2. Sign in with your Google account
# 3. Click "Create API Key" or "Get API Key"
# 4. Select "Create API key in new project" or choose existing project
# 5. Copy the API key (starts with AIzaSy...)
# 6. Paste it below
#
# FREE TIER LIMITS:
# - 60 requests per minute
# - 1,500 requests per day
# - Rate limits are generous for development
# - No credit card required
#
# API Key format: AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_API_KEY=your-gemini-api-key-here
API_KEY=your-gemini-api-key-here

# Gemini Model Selection
# Available models:
# - gemini-2.0-flash-exp (fastest, newest experimental)
# - gemini-1.5-pro (balanced, recommended)
# - gemini-1.5-flash (faster, lighter)
GEMINI_MODEL=gemini-1.5-pro

# Maximum tokens for generation
# Adjust based on your needs (higher = longer responses)
GEMINI_MAX_TOKENS=2048

# Temperature (0.0-1.0)
# Lower = more focused, Higher = more creative
GEMINI_TEMPERATURE=0.7

# Top-P sampling (0.0-1.0)
# Controls diversity of responses
GEMINI_TOP_P=0.9

# Top-K sampling
# Number of highest probability tokens to consider
GEMINI_TOP_K=40

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port
PORT=3001

# Node environment (development, production)
NODE_ENV=development

# Server host
HOST=0.0.0.0

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (comma-separated)
# Local: http://localhost:3000,http://localhost:8080
# Production: https://yourdomain.com,https://api.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# CORS credentials
CORS_CREDENTIALS=true

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limit window (milliseconds)
# 60000ms = 1 minute
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
# Adjust based on your Gemini API limits
RATE_LIMIT_MAX_REQUESTS=30

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true

# Enable error logging
LOG_ERRORS=true

# Log file path (optional)
LOG_FILE_PATH=logs/ai-service.log

# ===========================================
# AI FEATURES CONFIGURATION
# ===========================================

# Enable text refinement
ENABLE_TEXT_REFINEMENT=true

# Enable abstract generation
ENABLE_ABSTRACT_GENERATION=true

# Enable bio enhancement
ENABLE_BIO_ENHANCEMENT=true

# Enable citation checking
ENABLE_CITATION_CHECKING=true

# Enable content summarization
ENABLE_SUMMARIZATION=true

# Enable translation features
ENABLE_TRANSLATION=true

# ===========================================
# CACHE CONFIGURATION (Optional)
# ===========================================

# Enable response caching
CACHE_ENABLED=true

# Cache TTL (seconds)
# 3600 = 1 hour
CACHE_TTL=3600

# Cache storage (memory, redis)
CACHE_STORAGE=memory

# Redis URL (if using Redis for caching)
# Format: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ===========================================
# MONITORING & HEALTH
# ===========================================

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Health check path
HEALTH_CHECK_PATH=/health

# Enable metrics endpoint
METRICS_ENABLED=true

# Metrics path
METRICS_PATH=/metrics

# ===========================================
# SECURITY
# ===========================================

# API authentication token (optional)
# Generate with: openssl rand -hex 32
API_AUTH_TOKEN=

# Enable API key validation
VALIDATE_API_KEY=true

# Allowed IP addresses (comma-separated, optional)
# Leave empty to allow all
ALLOWED_IPS=

# Enable HTTPS in production
USE_HTTPS=false

# ===========================================
# CONTENT SAFETY
# ===========================================

# Enable content filtering
CONTENT_FILTERING_ENABLED=true

# Block harmful content
BLOCK_HARMFUL_CONTENT=true

# Block hate speech
BLOCK_HATE_SPEECH=true

# Block dangerous content
BLOCK_DANGEROUS_CONTENT=true

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Test command to verify API key:
# curl http://localhost:3001/health
#
# Test AI endpoint:
# curl -X POST http://localhost:3001/api/ai/refine \
#   -H "Content-Type: application/json" \
#   -d '{"text":"Hello world","context":"academic"}'

