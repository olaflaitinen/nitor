# ===========================================
# NITOR FRONTEND - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# API ENDPOINTS
# ===========================================

# Backend API URL
# Local: http://localhost:8080
# Production: https://your-backend-domain.com
VITE_API_URL=http://localhost:8080

# AI Service URL
# Local: http://localhost:3001
# Production: https://your-ai-service-domain.com
VITE_AI_SERVICE_URL=http://localhost:3001

# WebSocket URL
# Local: ws://localhost:8080/ws
# Production: wss://your-backend-domain.com/ws
VITE_WS_URL=ws://localhost:8080/ws

# ===========================================
# OAUTH CONFIGURATION
# ===========================================

# Enable/Disable OAuth Providers
# These should match backend configuration
VITE_GOOGLE_OAUTH_ENABLED=true
VITE_GITHUB_OAUTH_ENABLED=true
VITE_LINKEDIN_OAUTH_ENABLED=false

# OAuth Redirect URIs (must match backend)
VITE_OAUTH_REDIRECT_BASE=http://localhost:8080/api/auth/oauth2/callback

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable AI-powered features
VITE_AI_FEATURES_ENABLED=true

# Enable file upload
VITE_FILE_UPLOAD_ENABLED=true

# Enable real-time notifications
VITE_REALTIME_ENABLED=true

# Enable dark mode
VITE_DARK_MODE_ENABLED=true

# Enable LaTeX rendering
VITE_LATEX_ENABLED=true

# Enable analytics
VITE_ANALYTICS_ENABLED=false

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file size (bytes)
# 10MB = 10485760 bytes
VITE_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated MIME types)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Maximum number of files per upload
VITE_MAX_FILES_PER_UPLOAD=5

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application name
VITE_APP_NAME=NITOR Academic Network

# Application version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENV=development

# Support email
VITE_SUPPORT_EMAIL=support@nitor.io

# Terms of Service URL
VITE_TERMS_URL=https://nitor.io/terms

# Privacy Policy URL
VITE_PRIVACY_URL=https://nitor.io/privacy

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Google Analytics (optional)
# Get tracking ID: https://analytics.google.com
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking (optional)
# Get DSN: https://sentry.io
VITE_SENTRY_DSN=

# ===========================================
# UI CONFIGURATION
# ===========================================

# Posts per page
VITE_POSTS_PER_PAGE=20

# Comments per page
VITE_COMMENTS_PER_PAGE=10

# Connections per page
VITE_CONNECTIONS_PER_PAGE=50

# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=auto

# ===========================================
# CONTENT LIMITS
# ===========================================

# Post character limit
VITE_POST_MAX_LENGTH=5000

# Comment character limit
VITE_COMMENT_MAX_LENGTH=1000

# Bio character limit
VITE_BIO_MAX_LENGTH=500

# Title character limit
VITE_TITLE_MAX_LENGTH=200

# ===========================================
# RATE LIMITING (Frontend Display)
# ===========================================

# Display rate limit warnings
VITE_SHOW_RATE_LIMIT_WARNINGS=true

# Rate limit cooldown display (seconds)
VITE_RATE_LIMIT_COOLDOWN=60

# ===========================================
# NOTES
# ===========================================

# VITE_ prefix is required for all environment variables
# to be exposed to the frontend application

# Production deployment:
# 1. Update all URLs to production domains
# 2. Enable HTTPS (use https:// and wss://)
# 3. Update OAuth redirect URIs
# 4. Enable analytics if needed
# 5. Disable debug features

# Free services for frontend hosting:
# - Vercel: https://vercel.com (recommended for React)
# - Netlify: https://netlify.com (good for static sites)
# - Cloudflare Pages: https://pages.cloudflare.com (fast CDN)
# - GitHub Pages: https://pages.github.com (free, simple)

# Build command: npm run build
# Output directory: dist
